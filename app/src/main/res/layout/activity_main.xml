<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="#FFFFFF"
    android:backgroundTint="#FFFFFF"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:background="#D8D8D8"
        android:backgroundTint="#DCEBF8"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:textAlignment="center">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/user2s" />

        <LinearLayout
            android:layout_width="190dp"
            android:layout_height="96dp"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/allerta_stencil"
                android:text="Â¡Bienvenido!"
                android:textAlignment="center"
                android:textColor="#02579F"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/allerta_stencil"
                android:text="Juanma Alfaro"
                android:textAlignment="center"
                android:textColor="#3B3B3C"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/redondo"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/IBcamisetas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#00F4EEEE"
                android:contentDescription="@string/camisetas"
                android:onClick="camisetasClik"
                app:srcCompat="@drawable/verjerseys"
                tools:ignore="DuplicateSpeakableTextCheck" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/allerta_stencil"
                android:text="@string/camisetas"
                android:textAlignment="center"
                android:textColor="#555353"
                android:textSize="28sp"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:background="@drawable/redondo"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/IBcontacto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#00F4EEEE"
                android:contentDescription="@string/contacto"
                android:onClick="contacto"
                app:srcCompat="@drawable/contacto" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/allerta_stencil"
                android:text="@string/contacto"
                android:textAlignment="center"
                android:textColor="#555353"
                android:textSize="28sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/redondo"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/IBacercade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#00F4EEEE"
                android:contentDescription="@string/acerca_de"
                android:onClick="AcercaDe"
                app:srcCompat="@drawable/acercade" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/allerta_stencil"
                android:text="@string/acerca_de"
                android:textAlignment="center"
                android:textColor="#555353"
                android:textSize="28sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:background="@drawable/redondo"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/IBsalir"
                android:layout_width="match_parent"
                android:layout_height="147dp"
                android:backgroundTint="#00F4EEEE"
                android:contentDescription="@string/salir"
                android:onClick="Pedidos"
                app:srcCompat="@drawable/pedidos" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/allerta_stencil"
                android:text="Pedidos"
                android:textAlignment="center"
                android:textColor="#555353"
                android:textSize="28sp" />
        </LinearLayout>
    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>