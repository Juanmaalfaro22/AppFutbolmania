<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".PagoActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="60dp"
        android:layout_marginBottom="30dp"
        android:background="#EAE5E5"
        android:backgroundTint="#EDE9E9"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/allerta_stencil"
            android:text="@string/futbol"
            android:textColor="#00BCD4"
            android:textColorHighlight="#000000"
            android:textSize="34sp"
            android:textStyle="bold"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/allerta_stencil"
            android:gravity="center_horizontal"
            android:text="@string/mania"
            android:textColor="#000000"
            android:textSize="34sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/allerta_stencil"
        android:text="Resumen de compra"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="205dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:height="35dp"
                android:fontFamily="@font/allerta_stencil"
                android:text="Descripcion"
                android:textColor="#393535"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:height="30dp"
                android:fontFamily="@font/allerta_stencil"
                android:text="Talla"
                android:textColor="#393535"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:height="30dp"
                android:fontFamily="@font/allerta_stencil"
                android:text="Cantidad"
                android:textColor="#393535"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:height="30dp"
                android:fontFamily="@font/allerta_stencil"
                android:text="Precio C/U"
                android:textColor="#393535"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:height="30dp"
                android:fontFamily="@font/allerta_stencil"
                android:text="Total a Pagar"
                android:textColor="#393535"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="205dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="35dp"
                android:fontFamily="@font/allerta_stencil"
                android:text="TextView"
                android:textColor="#292626"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtTalla"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="30dp"
                android:fontFamily="@font/allerta_stencil"
                android:text="TextView"
                android:textColor="#292626"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtCantidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="30dp"
                android:fontFamily="@font/allerta_stencil"
                android:text="TextView"
                android:textColor="#292626"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtPrecio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="30dp"
                android:fontFamily="@font/allerta_stencil"
                android:text="TextView"
                android:textColor="#292626"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="30dp"
                android:fontFamily="@font/allerta_stencil"
                android:text="TextView"
                android:textColor="#4CAF50"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView35"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/allerta_stencil"
        android:text="Datos de envio"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="205dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView36"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:height="42dp"
                android:fontFamily="@font/allerta_stencil"
                android:gravity="center_vertical"
                android:text="Nombre "
                android:textAlignment="textStart"
                android:textColor="#2E2B2B"
                android:textColorHighlight="#232121"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView37"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:height="42dp"
                android:fontFamily="@font/allerta_stencil"
                android:gravity="center_vertical"
                android:text="correo"
                android:textColor="#2E2B2B"
                android:textColorHighlight="#232121"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView38"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:height="42dp"
                android:fontFamily="@font/allerta_stencil"
                android:gravity="center_vertical"
                android:text="Codigo Postal"
                android:textColor="#2E2B2B"
                android:textColorHighlight="#232121"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView39"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:height="37dp"
                android:fontFamily="@font/allerta_stencil"
                android:gravity="center_vertical"
                android:text="Direccion"
                android:textColor="#2E2B2B"
                android:textColorHighlight="#232121"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="205dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edtNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:elegantTextHeight="false"
                android:ems="10"
                android:fontFamily="@font/allerta_stencil"
                android:inputType="textPersonName"
                android:textColorHighlight="#232121"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edtCorreo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:ems="10"
                android:fontFamily="@font/allerta_stencil"
                android:inputType="textPersonName"
                android:textColorHighlight="#232121"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edtCP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:ems="10"
                android:fontFamily="@font/allerta_stencil"
                android:inputType="textPostalAddress"
                android:textColorHighlight="#232121"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edtDireccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:ems="10"
                android:fontFamily="@font/allerta_stencil"
                android:inputType="textPersonName"
                android:textColorHighlight="#232121"
                android:textSize="12sp" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnPagar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#2196F3"
        android:fontFamily="@font/allerta_stencil"
        android:onClick="Pago"
        android:text="Pagar"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />
</androidx.appcompat.widget.LinearLayoutCompat>