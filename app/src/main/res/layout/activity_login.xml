<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Login">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:background="#EAE5E5"
        android:backgroundTint="#EDE9E9"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/allerta_stencil"
            android:text="@string/futbol"
            android:textColor="#00BCD4"
            android:textColorHighlight="#000000"
            android:textSize="34sp"
            android:textStyle="bold"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/allerta_stencil"
            android:gravity="center_horizontal"
            android:text="@string/mania"
            android:textColor="#000000"
            android:textSize="34sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView34"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/allerta_stencil"
                android:text="Registrarse"
                android:textAlignment="center"
                android:textColor="#21282E"
                android:textSize="24sp"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:layout_gravity="center_horizontal"
                android:background="#BC7979"
                android:backgroundTint="#FFFFFF"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="210dp"
                    android:background="#DFD2D2"
                    android:backgroundTint="#FFFFFF"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="150px"
                        android:layout_height="150px"
                        android:layout_marginStart="25dp"
                        android:layout_marginBottom="15dp"
                        android:maxHeight="150px"
                        app:srcCompat="@drawable/user" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="150px"
                        android:layout_height="150px"
                        android:layout_marginStart="25dp"
                        android:layout_marginBottom="15dp"
                        app:srcCompat="@drawable/password" />

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="150px"
                        android:layout_height="150px"
                        android:layout_marginStart="25dp"
                        app:srcCompat="@drawable/passconf" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="290dp"
                    android:layout_height="210dp"
                    android:layout_marginEnd="40dp"
                    android:layout_marginBottom="15dp"
                    android:background="#DFD3D3"
                    android:backgroundTint="#FFFFFF"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/edtUsuario"
                        android:layout_width="match_parent"
                        android:layout_height="150px"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginBottom="15dp"
                        android:elegantTextHeight="true"
                        android:ems="10"
                        android:fontFamily="@font/allerta_stencil"
                        android:hint="Nombre de Usuario"
                        android:inputType="textPersonName"
                        android:textColorHighlight="#232121"
                        android:textColorHint="#575B60"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/edtPass"
                        android:layout_width="match_parent"
                        android:layout_height="150px"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginBottom="15dp"
                        android:elegantTextHeight="true"
                        android:ems="10"
                        android:fontFamily="@font/allerta_stencil"
                        android:hint="Contraseña"
                        android:inputType="textPassword"
                        android:textColorHint="#575B60"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/edtPassConf"
                        android:layout_width="match_parent"
                        android:layout_height="150px"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginBottom="15dp"
                        android:elegantTextHeight="true"
                        android:ems="10"
                        android:fontFamily="@font/allerta_stencil"
                        android:hint="Confirmar Contraseña"
                        android:inputType="textPassword"
                        android:textColorHint="#575B60"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btnCrearCuenta8"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:backgroundTint="#2196F3"
                android:elegantTextHeight="true"
                android:fontFamily="@font/allerta_stencil"
                android:gravity="center_horizontal"
                android:onClick="registro"
                android:text="Crear Cuenta"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E6D8D8"
            android:backgroundTint="#D6DBE1"
            android:gravity="center_horizontal"
            android:minHeight="400dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView33"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="30dp"
                android:fontFamily="@font/allerta_stencil"
                android:text="Iniciar Sesion"
                android:textAlignment="center"
                android:textColor="#21282E"
                android:textSize="24sp"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="#BC7979"
                android:backgroundTint="#D5DCE3"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="180dp"
                    android:background="#DFD2D2"
                    android:backgroundTint="#D6DBE1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="150px"
                        android:layout_height="150px"
                        android:layout_marginStart="25dp"
                        android:layout_marginBottom="15dp"
                        android:maxHeight="150px"
                        app:srcCompat="@drawable/user" />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="150px"
                        android:layout_height="150px"
                        android:layout_marginStart="25dp"
                        app:srcCompat="@drawable/password" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="310dp"
                    android:layout_height="180dp"
                    android:background="#DFD3D3"
                    android:backgroundTint="#D6DBE1"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/edtUsuario2"
                        android:layout_width="match_parent"
                        android:layout_height="150px"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="40dp"
                        android:layout_marginBottom="15dp"
                        android:elegantTextHeight="true"
                        android:ems="10"
                        android:fontFamily="@font/allerta_stencil"
                        android:hint="Nombre de Usuario"
                        android:inputType="textPersonName"
                        android:textColorHighlight="#232121"
                        android:textColorHint="#575B60"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/edtPass2"
                        android:layout_width="match_parent"
                        android:layout_height="150px"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="40dp"
                        android:elegantTextHeight="true"
                        android:ems="10"
                        android:fontFamily="@font/allerta_stencil"
                        android:hint="Contraseña"
                        android:inputType="textPassword"
                        android:textColorHint="#575B60" />

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btnCrearCuenta4"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:layout_marginBottom="30dp"
                android:backgroundTint="#2196F3"
                android:elegantTextHeight="true"
                android:fontFamily="@font/allerta_stencil"
                android:onClick="iniciarSesion"
                android:text="Iniciar Sesion"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>