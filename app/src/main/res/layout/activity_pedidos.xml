<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".Pedidos">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="60dp"
        android:layout_marginBottom="30dp"
        android:background="#EAE5E5"
        android:backgroundTint="#EDE9E9"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/allerta_stencil"
            android:text="@string/futbol"
            android:textColor="#00BCD4"
            android:textColorHighlight="#000000"
            android:textSize="34sp"
            android:textStyle="bold"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/allerta_stencil"
            android:gravity="center_horizontal"
            android:text="@string/mania"
            android:textColor="#000000"
            android:textSize="34sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#DCEBF8"
        android:backgroundTint="#DCEBF8"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/user2s" />

        <LinearLayout
            android:layout_width="190dp"
            android:layout_height="96dp"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvUsuario2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/allerta_stencil"
                android:text="Pedidos"
                android:textAlignment="center"
                android:textColor="#02579F"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/allerta_stencil"
                android:text="Juanma Alfaro"
                android:textAlignment="center"
                android:textColor="#21282E"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/allerta_stencil"
        android:text="Mis Pedidos"
        android:textAlignment="center"
        android:textColor="#575B60"
        android:textSize="28sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinner"
        style="@style/Widget.AppCompat.Spinner"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:background="#E8E6E6"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="165dp"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView26"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#D8D5D5"
                android:fontFamily="@font/allerta_stencil"
                android:text="No. Pedido"
                android:textAlignment="textStart"
                android:textColor="#575B60"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView31"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#D8D5D5"
                android:fontFamily="@font/allerta_stencil"
                android:text="Descripcion"
                android:textAlignment="textStart"
                android:textColor="#575B60"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#D8D5D5"
                android:fontFamily="@font/allerta_stencil"
                android:text="Cantidad"
                android:textAlignment="textStart"
                android:textColor="#575B60"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView29"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#D8D5D5"
                android:fontFamily="@font/allerta_stencil"
                android:text="Total"
                android:textAlignment="textStart"
                android:textColor="#575B60"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView30"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#D8D5D5"
                android:fontFamily="@font/allerta_stencil"
                android:text="Direccion Envio"
                android:textAlignment="textStart"
                android:textColor="#575B60"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="225dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="#E4E1E1"
                android:fontFamily="@font/allerta_stencil"
                android:textAlignment="textStart"
                android:textColor="#575B60"
                android:textSize="20sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:height="26dp"
                android:background="#E4E1E1"
                android:elegantTextHeight="false"
                android:fontFamily="@font/allerta_stencil"
                android:textAlignment="textStart"
                android:textColor="#575B60"
                android:textSize="10sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10.5dp"
                android:layout_marginEnd="10dp"
                android:background="#E4E1E1"
                android:fontFamily="@font/allerta_stencil"
                android:textAlignment="textStart"
                android:textColor="#575B60"
                android:textSize="20sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tv4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="#E4E1E1"
                android:fontFamily="@font/allerta_stencil"
                android:textAlignment="textStart"
                android:textColor="#575B60"
                android:textSize="20sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tv5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:height="26dp"
                android:background="#E4E1E1"
                android:fontFamily="@font/allerta_stencil"
                android:textAlignment="textStart"
                android:textColor="#575B60"
                android:textSize="10sp"
                android:textStyle="normal" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnCancelar"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#2196F3"
        android:fontFamily="@font/allerta_stencil"
        android:onClick="cancelar"
        android:text="Cancelar Pedido"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

</androidx.appcompat.widget.LinearLayoutCompat>